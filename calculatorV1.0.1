#ACTIONS:
def clear():
    #Action: Clears the entry().
    Numbox.delete(0,END);
    return;

def update_Entry(inputValue):
    #Updates the entry when a button is pressed.
    currentText = equation.get();
    update = equation.set(currentText + inputValue);

def evaluate():
    currentText = equation.get()
    try:
        equation.set(str(eval(currentText)))
    except SyntaxError:
        equation.set('<ERROR>')

